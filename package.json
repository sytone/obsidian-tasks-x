{
  "name": "obsidian-tasks-x",
  "version": "2.6.1",
  "description": "Task management for Obsidian, SQL Powered. This is a fork of the Tasks plugin.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "node .config/esbuild.config.mjs watch",
    "build": "node .config/esbuild.config.mjs production",
    "build:dev": "node .config/esbuild.config.mjs",
    "lint": "eslint ./src --fix && eslint ./tests --fix && tsc --noEmit --pretty && svelte-check",
    "lint:markdown": "markdownlint-cli2-config \".config/.markdownlint-cli2.jsonc\" \"**/*.md\" \"#node_modules\" \"#CHANGELOG.md\"",
    "test": "jest --ci",
    "test:dev": "jest --watch",
    "test:obsidian": "pwsh -ExecutionPolicy Unrestricted -NoProfile -File ./scripts/Test-TasksInLocalObsidian.ps1",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:minor": "standard-version --release-as minor --no-verify",
    "release:patch": "standard-version --release-as patch --no-verify",
    "release:major": "standard-version --release-as major --no-verify"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "obsidian-tasks",
    "task-manager",
    "task-management"
  ],
  "author": "Martin Schenck",
  "license": "MIT",
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@codemirror/view": "^0.19.34",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "async-mutex": "^0.3.1",
    "builtin-modules": "^3.2.0",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.0",
    "esbuild-plugin-copy-file": "^0.0.2",
    "esbuild-svelte": "^0.6.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.5.1",
    "markdownlint-cli2": "^0.4.0",
    "obsidian": "0.13.21",
    "prettier": "^2.2.1",
    "standard-version": "^9.5.0",
    "svelte": "^3.49.0",
    "svelte-check": "^1.5.2",
    "svelte-preprocess": "^4.10.1",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "adler-32": "^1.3.1",
    "alasql": "^1.7.3",
    "chrono-node": "2.3.9",
    "eventemitter2": "^6.4.5",
    "handlebars": "^4.7.7",
    "rrule": "^2.7.0"
  },
  "standard-version": {
    "tag-prefix": "",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "change",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "fix",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "deprecate",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "build",
        "hidden": true
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "ci",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Internal"
      },
      {
        "type": "revert",
        "hidden": true
      },
      {
        "type": "security",
        "section": "Internal"
      },
      {
        "type": "perf",
        "section": "Internal"
      },
      {
        "type": "test",
        "section": "Internal"
      }
    ],
    "commitUrlFormat": "https://github.com/sytone/obsidian-tasks-x/commits/{{hash}}",
    "compareUrlFormat": "https://github.com/sytone/obsidian-tasks-x/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/sytone/obsidian-tasks-x/issues/{{id}}",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "manifest.json",
        "type": "json"
      },
      {
        "filename": "versions.json",
        "updater": "scripts/obsidian-versions-updater.js"
      }
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "prettierIgnore": [
    "main.js",
    "styles.css",
    "data.json"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:import/typescript"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "ignorePatterns": [
      "main.js"
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "@typescript-eslint/no-unused-vars": 0,
      "no-unused-vars": 0,
      "semi": [
        "error",
        "always"
      ],
      "import/order": "error",
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ]
    }
  }
}
